<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorAccent">#FF5252</item>
        <item name="textColorPrimary">#212121</item>
        <item name="textColorSecondary">#757575</item>
        <item name="android:iconTint">#212121</item>
    </style>

    <!-- This cleans up the header sections of the TextViews in the activity_main xml -->
    <style name="HeaderTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
